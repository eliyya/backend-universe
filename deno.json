{
  "tasks": {
    "start": "deno run --allow-net --allow-env --allow-sys --allow-read --allow-ffi --allow-write --unstable src/index.ts",
    "dev": "deno run --allow-net --allow-env --allow-sys --allow-read --allow-ffi --allow-write --unstable --watch src/index.ts"
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": false,
    "indentWidth": 4,
    "lineWidth": 120
  },
  "imports": {
    "@hono/": "https://deno.land/x/hono@v3.11.11/",
    "@zod/": "https://deno.land/x/zod@v3.21.4/",
    "@dotenv/": "https://deno.land/std@0.199.0/dotenv/",
    "@encoding/": "https://deno.land/std@0.133.0/encoding/",
    "@supabase": "https://esm.sh/@supabase/supabase-js@2.39.1",
    "@sqlite/": "https://deno.land/x/sqlite3@0.10.0/",
    "@sentry": "npm:@sentry/node",
    "@controller": "./src/controllers/default.ts",
    "@error": "./src/sentry.ts",
    "@utils/": "./src/utils/",
    "@models/": "./src/models/",
    "@interfaces/": "./src/interfaces/",
    "@middlewares/": "./src/middlewares/",
    "@db/": "./src/db/",
    "@classes/": "./src/classes/",
    "@constants": "./src/constants.ts"
  }
